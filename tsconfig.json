{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types" /* build '.d.ts' files to ./dist/types */,
    "outDir": "dist/esm" /* build to ./dist/esm */,
    "target": "ES2015",
    "module": "ES2015",
    "lib": [
        "es2015",
        "dom"
    ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "baseUrl": "src",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "paths": {
    "@/*": ["./src/*"],
    "@/interfaces/*": ["./src/interfaces/*"],
    "@/enums/*": ["./src/enums/*"],
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": [
    "node_modules", "dist"
  ]
}