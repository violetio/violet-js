{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "outDir": "dist",
    "target": "ES6",
    "module": "ES6",
    "lib": [
        "es6",
        "dom"
    ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "baseUrl": "src",
    "types": [],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "paths": {
    "@/*": ["./src/*"],
    "@/interfaces/*": ["./src/interfaces/*"],
    "@/enums/*": ["./src/enums/*"],
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": [
    "node_modules", "dist"
  ]
}